<div class="container mt-3">
  <div class="bg-white rounded p-3 shadow">
    <h3>Add a movie to your list</h3>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
